@{
    ViewData["Title"] = "Enter To-Do List";
}

@model ToDoApp.Models.ToDoResponse

<h1>@ViewData["Title"]</h1>
<br />

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Task">Task:</label>
        <input asp-for="Task" />
        <br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" placeholder="01/01/2022" />
        <br />

        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" />
        <br />


        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>

        <br />

        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <br />




        <button type="submit">Submit</button>

    </form>

</div>



}
